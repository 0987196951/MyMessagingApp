<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidx="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chatListImageGroup"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@color/design_default_color_primary">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/chatListNameGroup"
        android:layout_width="280dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/chatListImageGroup"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        ></TextView>

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/chatListNameGroup"></TextView>

    <TextView
        android:id="@+id/chatListLastMessage"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_below="@+id/chatListNameGroup"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/chatListImageGroup"
        android:textSize="16dp"
        android:text="Hello">

    </TextView>
