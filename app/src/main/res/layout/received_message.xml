<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/receivedMessage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/contentMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toEndOf="@id/imageMessage"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/background_receivemess"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:text="TextView"
        android:textSize="15dp"
        android:textColor="@color/black" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageMessage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@color/design_default_color_primary">


    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/timeMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contentMessage"
        android:layout_toEndOf="@id/imageMessage"
        android:text="@string/time_message"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />
